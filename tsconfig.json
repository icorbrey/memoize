{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "src",
		"outDir": "dist",
		"sourceMap": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"src/**/*.test.ts"
	]
}
